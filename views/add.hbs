<h1>Add a new course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required />
    <label for="title">Сourse name</label>
    <span class="helper-text" data-error="Write a cpurse name"></span>
  </div>
  <div class="input-field">
    <input name="price" id="price" type="number" class="validate" required min="10" />
    <label for="price">Сourse price</label>
    <span class="helper-text" data-error="Write a course price"></span>
  </div>
  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" required />
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Write a course url"></span>
  </div>
  <button class="btn btn-primary">Add a new course</button>
</form>